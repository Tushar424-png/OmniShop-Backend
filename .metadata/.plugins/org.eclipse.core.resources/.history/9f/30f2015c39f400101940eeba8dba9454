package com.api_gateway.config;

import org.springframework.cloud.gateway.filter.GlobalFilter;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.http.HttpStatus;
import reactor.core.publisher.Mono;

@Configuration
public class RateLimitLoggerConfig {

    @Bean
    public GlobalFilter postRateLimitLogger() {
        return (exchange, chain) -> chain.filter(exchange).then(Mono.fromRunnable(() -> {
            // Check agar status code 429 (Too Many Requests) hai
            if (exchange.getResponse().getStatusCode() == HttpStatus.TOO_MANY_REQUESTS) {
                String path = exchange.getRequest().getPath().value();
                String ip = exchange.getRequest().getRemoteAddress().getHostString();
                
                System.err.println("----------------------------------------------");
                System.err.println("⚠️ ALERT: RATE LIMIT EXCEEDED!");
                System.err.println("Bhai, limit khatam ho gayi!");
                System.err.println("User IP: " + ip);
                System.err.println("Requested Path: " + path);
                System.err.println("----------------------------------------------");
            }
        }));
    }
}