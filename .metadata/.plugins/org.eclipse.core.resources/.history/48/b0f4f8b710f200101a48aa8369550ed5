spring.application.name=Api-Gateway
server.port=8086

# Eureka Config
eureka.client.service-url.defaultZone=http://localhost:8761/eureka/

# User Service Route
spring.cloud.gateway.routes[0].id=user_route
spring.cloud.gateway.routes[0].uri=lb://USERSERVICE
spring.cloud.gateway.routes[0].predicates[0]=Path=/user/**
spring.cloud.gateway.routes[0].filters[0]=PreserveHostHeader=true
spring.cloud.gateway.routes[0].filters[1]=AddRequestHeader=Authorization, #{request.headers['Authorization']}

# Auth Service Route
spring.cloud.gateway.routes[1].id=auth_route
spring.cloud.gateway.routes[1].uri=lb://AUTHSERVICE
spring.cloud.gateway.routes[1].predicates[0]=Path=/auth/**
eureka.client.register-with-eureka=true
eureka.client.fetch-registry=true
