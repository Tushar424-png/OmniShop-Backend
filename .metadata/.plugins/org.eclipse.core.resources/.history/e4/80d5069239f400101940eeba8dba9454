spring.application.name=API-GATEWAY
server.port=8086

spring.main.web-application-type=reactive

# Eureka
eureka.client.service-url.defaultZone=http://localhost:8761/eureka/
eureka.client.register-with-eureka=true
eureka.client.fetch-registry=true

eureka.instance.lease-renewal-interval-in-seconds=10
eureka.instance.lease-expiration-duration-in-seconds=30

spring.data.redis.host=localhost
spring.data.redis.port=6379
spring.data.redis.password=

# =========================
# USER SERVICE + Rate Limit
# =========================
spring.cloud.gateway.routes[0].id=user_route
spring.cloud.gateway.routes[0].uri=lb://USERSERVICE
spring.cloud.gateway.routes[0].predicates[0]=Path=/user/**

# AUTH SERVICE
# =========================
spring.cloud.gateway.routes[1].id=auth_route
spring.cloud.gateway.routes[1].uri=lb://AUTHSERVICE
spring.cloud.gateway.routes[1].predicates[0]=Path=/auth/**
spring.cloud.gateway.routes[1].filters[0].name=RequestRateLimiter
spring.cloud.gateway.routes[1].filters[0].args.redis-rate-limiter.replenishRate=1
spring.cloud.gateway.routes[1].filters[0].args.redis-rate-limiter.burstCapacity=1
# Yahan ipKeyResolver use karenge kyunki Login ke waqt Email nahi milta
spring.cloud.gateway.routes[1].filters[0].args.key-resolver=#{@ipKeyResolver}
# =========================
# ORDER SERVICE
# =========================
spring.cloud.gateway.routes[2].id=order_route
spring.cloud.gateway.routes[2].uri=lb://ORDERSERVICE
spring.cloud.gateway.routes[2].predicates[0]=Path=/order/**

# =========================
# INVENTORY SERVICE
# =========================
spring.cloud.gateway.routes[3].id=inventory_route
spring.cloud.gateway.routes[3].uri=lb://INVENTORYSERVICE
spring.cloud.gateway.routes[3].predicates[0]=Path=/inventory/**


spring.cloud.gateway.routes[4].id=product_route
spring.cloud.gateway.routes[4].uri=lb://PRODUCTSERVICE
spring.cloud.gateway.routes[4].predicates[0]=Path=/products/**


